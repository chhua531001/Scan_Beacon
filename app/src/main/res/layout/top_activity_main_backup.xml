<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chhua.scan_beacon.MainActivity"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="@color/purple"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1">

            <!--android:layout_marginEnd="8dp"-->
            <!--android:layout_marginBottom="4dp"-->
            <!--app:layout_constraintTop_toBottomOf="@+id/textClock"-->

            <Button
                android:id="@+id/messageButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="messageClick"
                android:text="訊息"
                android:textColor="@color/white"
                android:textSize="25dp" />


            <Button
                android:id="@+id/inquireButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="inquireClick"
                android:text="查詢"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <Button
                android:id="@+id/toolsButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="toolsClick"
                android:text="工具"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <Button
                android:id="@+id/settingButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="settingClick"
                android:text="設定"
                android:textColor="@color/white"
                android:textSize="25dp" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginRight="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="0dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="@color/purple"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1">

            <!--android:layout_marginEnd="8dp"-->
            <!--android:layout_marginBottom="4dp"-->
            <!--app:layout_constraintTop_toBottomOf="@+id/textClock"-->

            <Button
                android:id="@+id/detailButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="detailClick"
                android:text="詳細"
                android:textColor="@color/white"
                android:textSize="25dp" />


            <Button
                android:id="@+id/commodityButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="commodityClick"
                android:text="商品"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <Button
                android:id="@+id/shelfButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="shelfClick"
                android:text="貨架"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <Button
                android:id="@+id/storeButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:onClick="storeClick"
                android:text="商店"
                android:textColor="@color/white"
                android:textSize="25dp" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <!--android:background="@android:color/transparent"-->


</android.support.constraint.ConstraintLayout>
